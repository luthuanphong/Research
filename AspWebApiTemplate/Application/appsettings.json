{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://0.0.0.0:80"
      },
      "HttpsDefaultCert": {
        "Url": "https://0.0.0.0:443"
      }
    },
    "Certificates": {
      "Default": {
        "Path": "/cert/https.pfx",
        "Password": ""
      }
    }
  },

    "Authentication": {
      "usingAzureAD": false,
      "usingGoogle": false,
      "usingFacebook": false,

      "jwtConfiguration": {
        "Secret": "12345678",
        "Issuer": "127.0.0.1",
        "Audience": "127.0.0.1",
        "AccessTokenExpiration": 20,
        "RefreshTokenExpiration": 60
      },

      "AzureAd": {
        "Instance": "https://login.microsoftonline.com/",
        "ClientId": "Enter_the_Application_Id_here",
        "TenantId": "Enter_the_Tenant_Info_Here"
      }
    },
    "Database": {
      "SQLServer": {

      },
      "MongoDB": {

      }
    }
  }
